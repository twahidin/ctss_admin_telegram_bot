# Telegram Bot Token from @BotFather
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Claude API Key from console.anthropic.com
CLAUDE_API_KEY=your_claude_api_key_here

# PostgreSQL Database URL
# Local: postgresql://user:password@localhost:5432/schooladmin
# Railway: automatically provided by Railway
DATABASE_URL=postgresql://user:password@localhost:5432/schooladmin

# Super Admin Telegram IDs (comma-separated)
# Get your ID from @userinfobot on Telegram
SUPER_ADMIN_IDS=123456789,987654321

# Storage path for uploaded files (optional, defaults to ./data/uploads)
STORAGE_PATH=./data/uploads
